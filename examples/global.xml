<project xmlns="http://example.org/schema/MSC">
    <install>
        <path>/home/cz/back/install</path>
        <url>http://localhost/install</url>
        <mode>production</mode>
    </install>
    <warehouse>
        <db id="main">
            <name>cz</name>
            <driver>Pg</driver>
            <server>
                <host>localhost</host>
                <port>5432</port>
            </server>
            <role>
                <admin>
                    <login>cz_admin</login>
                    <pass>secret1</pass>
                </admin>
                <user>
                    <login>cz_user</login>
                    <pass>secret2</pass>
                </user>
            </role>
        </db>
        <relation name="http">
            <db>main</db>
        </relation>
        <relation name="item">
            <db>main</db>
        </relation>
    </warehouse>
    <upload>
        <dir>/var/uploads</dir>
        <path>/uploads</path>
        <url>http://localhost/uploads</url>
    </upload>
    <logLevel>WARNING</logLevel>
    <debug>
        <output>On</output>
        <layer>APP</layer>
    </debug>
    <test>
        <url name="example">http://localhost/test</url>
    </test>
</project>